% assert_all_rdf_tripples(+List,+Pred)
assert_all_rdf_tripples([],_):-
	!.
assert_all_rdf_tripples([t(X,Y,Z)|T],Pred):-
	dynamic(Pred/3),
	P =.. [Pred,X,Y,Z],
	assert(P),
	assert_all_rdf_tripples(T,Pred),
	!.

