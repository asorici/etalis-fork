% read_file_in_list(+File,-L).
%
% Example:
% read_file_in_list('rdf_examples/agency.rdf',L).
read_file_in_list(File,L):-
	open(File,read,S),
	read_stream(S,L).

read_stream(S,[H|L]):-
	not(at_end_of_stream(S)),
	get_code(S,H),
	read_stream(S,L),
	!.
read_stream(_S,[]).

